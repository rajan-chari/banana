# Copy this file to .env and fill in your values

# =============================================================================
# LLM Configuration (PydanticAI)
# =============================================================================
# Provider options: openai, azure, anthropic, ollama, groq
LLM_PROVIDER=openai
LLM_MODEL=gpt-4o
LLM_TEMPERATURE=0.7
# LLM_MAX_TOKENS=4096

# OpenAI
OPENAI_API_KEY=your-api-key-here

# Azure OpenAI (if using azure provider)
# AZURE_OPENAI_API_KEY=your-api-key-here
# AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
# AZURE_OPENAI_DEPLOYMENT=gpt-4o
# AZURE_OPENAI_API_VERSION=2024-02-01

# Anthropic (if using anthropic provider)
# ANTHROPIC_API_KEY=your-api-key-here

# Ollama (if using ollama provider for local models)
# OLLAMA_HOST=http://localhost:11434

# Groq (if using groq provider)
# GROQ_API_KEY=your-api-key-here

# =============================================================================
# Teams Bot Configuration
# =============================================================================
BOT_ID=
BOT_PASSWORD=

# =============================================================================
# Multi-Agent Communication (agcom)
# =============================================================================
# Enable/disable agcom integration
AGCOM_ENABLED=true

# API connection settings
AGCOM_API_URL=http://localhost:8700

# Identity Configuration
# IMPORTANT: Set your agcom handle first, then the assistant handle will be auto-derived
AGCOM_USER_HANDLE=alice                    # Your agcom handle (REQUIRED)
AGCOM_HANDLE=alice_assistant               # Assistant's handle (auto-derived from user handle)
AGCOM_DISPLAY_NAME=Alice's Assistant       # Display name (optional, auto-generated if not set)

# Connection behavior
AGCOM_AUTO_LOGIN=true
AGCOM_POLL_INTERVAL=30

# =============================================================================
# Application Settings
# =============================================================================
LOG_LEVEL=INFO
